{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% block field %}
    {% if object.placement == 1 %}
        {{ 'Young'|trans }}
        <i class="fa fa-stop" style="color: #40cf22" aria-hidden="true"></i>
    {% elseif object.placement == 2 %}
        {{ 'Young Parents'|trans }}
        <i class="fa fa-stop" style="color: #2e65cf" aria-hidden="true"></i>
    {% else %}
        {{ 'Not Decided'|trans }}
    {% endif %}
{% endblock %}
