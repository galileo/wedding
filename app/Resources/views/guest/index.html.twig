{% extends 'base.html.twig' %}

{% block body %}
    <h1>Guests list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Placement</th>
                <th>Transportbefore</th>
                <th>Transportafter</th>
                <th>Accommodation</th>
                <th>Pricerange</th>
                <th>Side</th>
                <th>Nextday</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for guest in guests %}
            <tr>
                <td><a href="{{ path('guest_show', { 'id': guest.id }) }}">{{ guest.id }}</a></td>
                <td>{{ guest.name }}</td>
                <td>{{ guest.placement }}</td>
                <td>{{ guest.transportBefore }}</td>
                <td>{{ guest.transportAfter }}</td>
                <td>{{ guest.accommodation }}</td>
                <td>{{ guest.priceRange }}</td>
                <td>{{ guest.side }}</td>
                <td>{{ guest.nextDay }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('guest_show', { 'id': guest.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('guest_edit', { 'id': guest.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('guest_new') }}">Create a new guest</a>
        </li>
    </ul>
{% endblock %}
