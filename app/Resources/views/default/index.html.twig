{% extends 'SonataAdminBundle::standard_layout.html.twig' %}

{% block top_bar_after_nav %}
    <li>
        <a href="{{ path('homepage') }}">
            {{ 'Budget'|trans }}
        </a>
    </li>
{% endblock %}

{% block sonata_page_content %}
    <div id="wrapper">
        <div id="container">
            <section class="content">
                <div>
                    <h2>Budżet</h2>

                    <table class="table table-bordered table-striped sonata-ba-list">
                        <thead>
                        <tr class="sonata-ba-list-field-header">
                            <th class="sonata-ba-list-field-header">
                                <strong>Suma:</strong>
                            </th>
                            <th>
                                <strong>Zapłacono:</strong>
                            </th>
                            <th>
                                <strong>Do zapłaty:</strong>{{ budget.leftToPay }}
                            </th>
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for expense in budget.expenses %}
                            <tr>
                                <th>
                                    {{ expense.name }}
                                </th>
                                <td class="sonata-ba-list-field sonata-ba-list-field-number" objectid="{{ expense }}">
                                    {{ expense.amount }} {{ price_currency }}
                                </td>

                                <td>
                                </td>
                                <td>
                                    {{ expense.leftToPay }} {{ price_currency }}
                                </td>
                                <td>
                                    {{ expense.paid }} {{ price_currency }}
                                </td>
                            </tr>
                            {% for deposit in expense.deposits %}
                                <tr>
                                    <td colspan="3"></td>
                                    <td>{{ deposit.amount }} {{ price_currency }}</td>
                                    <td>{{ deposit.message }}</td>
                                </tr>
                            {% endfor %}
                        {% endfor %}
                        </tbody>
                        <tfoot class="box-footer">
                        <tr>
                            <th>Suma</th>
                            <th>{{ budget.total }} {{ price_currency }}</th>
                            <th>{{ budget.paid }} {{ price_currency }}</th>
                            <th>{{ budget.leftToPay }} {{ price_currency }}</th>
                        </tr>
                        </tfoot>
                    </table>
                </div>
            </section>
        </div>
    </div>

    <h3>{{ 'Guest'|trans }}</h3>
    <div>
        <strong>{{ userCount.countAdults }}: </strong>{{ costs.adults }}
        <strong>{{ userCount.countKids }}: </strong>{{ costs.kids }}
        <strong>Wszyscy kwota końcowa: </strong>{{ costs.all }} + 250 = {{ costs.all + 250 }}
        <strong>Do wydania:</strong>{{ costs.all + 250 - 1500 - 7000 }}
    </div>
{% endblock %}
